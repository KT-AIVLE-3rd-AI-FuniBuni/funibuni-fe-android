<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/waste_image_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Placeholder -->
                <ImageView
                    android:id="@+id/placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:padding="30dp"
                    android:src="@drawable/bunny_icon_gray_240"
                    android:background="@color/placeholder_background_gray"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!-- Waste Image -->
                <ImageView
                    android:id="@+id/waste_image"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!-- CardView Footer -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/waste_image">

                    <!-- Waste Name -->
                    <TextView
                        android:id="@+id/waste_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        tools:text="의자가 맞을까요?"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/disposal_fee"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Disposal Fee -->
                    <TextView
                        android:id="@+id/disposal_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        tools:text="8,000원"
                        app:layout_constraintTop_toBottomOf="@id/waste_name"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/waste_name"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_disposal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="배출하기"
            app:layout_constraintTop_toBottomOf="@id/waste_image_card_view"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sharing_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/btn_disposal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:paddingHorizontal="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지구 살리기"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/waste_sharing_message"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_sharing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나눔해보기"
            app:layout_constraintTop_toBottomOf="@id/sharing_card_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>