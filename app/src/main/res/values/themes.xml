<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Base.Theme.FuniBuni" parent="Theme.Material3.DayNight.NoActionBar">-->
    <style name="Base.Theme.FuniBuni" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/theme_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_color</item>
        <item name="colorSecondaryVariant">@color/theme_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your light theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <!-- Status Bar Color -->
        <item name="android:statusBarColor">@color/theme_color</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.FuniBuni" parent="Base.Theme.FuniBuni" />

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>
</resources>